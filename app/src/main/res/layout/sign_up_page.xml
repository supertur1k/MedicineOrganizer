<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".pages.SignUpPageActivity">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:padding="16dp"
      android:gravity="center_horizontal">

    <TextView
        android:id="@+id/signUpPageAuthText"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:typeface="monospace"
        android:layout_height="wrap_content"
        android:text="Medicine Organizer"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="@color/saladGreen"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="60dp"/>

    <EditText
        android:id="@+id/signUpPageUsernameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Имя пользователя"
        android:inputType="text"
        android:backgroundTint="@color/saladGreen"
        android:textColor="@color/greyColor"
        android:textColorHint="@android:color/darker_gray"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />


    <EditText
        android:id="@+id/signUpPageUserEmailEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Почта"
        android:inputType="textEmailAddress"
        android:backgroundTint="@color/saladGreen"
        android:textColor="@color/greyColor"
        android:textColorHint="@android:color/darker_gray"
        android:padding="12dp"
        android:layout_marginBottom="24dp" />

    <EditText
        android:id="@+id/signUpPageUserPasswordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Пароль"
        android:inputType="textPassword"
        android:backgroundTint="@color/saladGreen"
        android:textColor="@color/greyColor"
        android:textColorHint="@android:color/darker_gray"
        android:padding="12dp"
        android:layout_marginBottom="24dp" />

    <EditText
        android:id="@+id/signUpPageUserConfirmPasswordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Пароль еще раз"
        android:inputType="textPassword"
        android:backgroundTint="@color/saladGreen"
        android:textColor="@color/greyColor"
        android:textColorHint="@android:color/darker_gray"
        android:padding="12dp"
        android:layout_marginBottom="24dp" />


    <view
        android:id="@+id/signUpPageSignUpButton"
        class="androidx.appcompat.widget.AppCompatButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Зарегистрироваться"
        android:backgroundTint="@color/saladGreen"
        android:textColor="@android:color/white"
        android:padding="16dp"
        android:layout_marginBottom="24dp" />

    <TextView
        android:id="@+id/signUpPageGoToLoginPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Уже есть аккаунт. Войти"
        android:textColor="@color/saladGreen"
        android:textStyle="italic"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact us: arzamilov@edu.hse.ru"
        android:textColor="@color/greyColor"
        android:textStyle="italic"
        android:layout_marginTop="50dp"/>
  </LinearLayout>

  <androidx.constraintlayout.widget.Group
      android:id="@+id/group2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>
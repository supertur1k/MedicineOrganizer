<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pages.SignUpPageActivity">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="#0d8234"
      android:orientation="vertical"
      tools:layout_editor_absoluteX="0dp"
      tools:layout_editor_absoluteY="58dp">

    <TextView
        android:id="@+id/auth_text"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:fontFamily="monospace"
        android:text="Регистрация"
        android:layout_marginTop="200sp"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold"
        android:typeface="monospace" />

    <EditText
        android:id="@+id/userEmailSignUpPageEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40sp"
        android:layout_marginTop="20sp"
        android:layout_marginRight="40sp"
        android:background="@drawable/fields"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="10sp"
        android:textColor="@color/customColor" />

    <EditText
        android:id="@+id/userPasswordSignUpPageEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40sp"
        android:layout_marginTop="15sp"
        android:layout_marginRight="40sp"
        android:background="@drawable/fields"
        android:ems="10"
        android:hint="Пароль"
        android:inputType="textPassword"
        android:padding="10sp"
        android:textColor="@color/customColor" />

    <EditText
        android:id="@+id/userPasswordConfirmEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40sp"
        android:layout_marginTop="15sp"
        android:layout_marginRight="40sp"
        android:background="@drawable/fields"
        android:ems="10"
        android:hint="Пароль еще раз"
        android:inputType="textPassword"
        android:padding="10sp"
        android:textColor="@color/customColor" />

    <view
        android:id="@+id/signUpButton"
        class="androidx.appcompat.widget.AppCompatButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40sp"
        android:layout_marginTop="15sp"
        android:layout_marginRight="40sp"
        android:background="@drawable/button"
        android:padding="10sp"
        android:text="Зарегистрироваться"
        android:textColor="#FFFFFFFF" />

    <view
        android:id="@+id/alreadyHaveAccountButton"
        class="androidx.appcompat.widget.AppCompatButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40sp"
        android:layout_marginTop="15sp"
        android:layout_marginRight="40sp"
        android:background="@drawable/button_grey"
        android:padding="10sp"
        android:text="У меня уже есть аккаунт"
        android:textColor="#FFFFFFFF" />
  </LinearLayout>

  <androidx.constraintlayout.widget.Group
      android:id="@+id/group2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pages.LoginPageActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/loginPageAuthText"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:typeface="monospace"
            android:layout_height="wrap_content"
            android:text="Medicine Organizer"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="@color/saladGreen"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="160dp"
            android:layout_marginBottom="60dp"/>

        <EditText
            android:id="@+id/loginPageUsernameEditText"
            android:drawableLeft="@drawable/ic_user"
            android:drawablePadding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Имя пользователя"
            android:inputType="text"
            android:backgroundTint="@color/saladGreen"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/loginPageUserPasswordEditText"
            android:drawableLeft="@drawable/ic_password"
            android:drawablePadding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Пароль"
            android:inputType="textPassword"
            android:backgroundTint="@color/saladGreen"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            android:padding="12dp"
            android:layout_marginBottom="24dp" />

        <view
            android:id="@+id/loginPageButtonLogin"
            class="androidx.appcompat.widget.AppCompatButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Войти"
            android:backgroundTint="@color/saladGreen"
            android:textColor="@android:color/white"
            android:padding="16dp"
            android:layout_marginBottom="24dp" />

      <TextView
            android:id="@+id/loginPageGoToRegistrationPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Нет аккаунта? Зарегистрироваться"
            android:textColor="@color/saladGreen"
            android:textStyle="italic"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact us: arzamilov@edu.hse.ru"
            android:textColor="@android:color/black"
            android:textStyle="italic"
            android:layout_marginTop="140dp"/>
    </LinearLayout>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>